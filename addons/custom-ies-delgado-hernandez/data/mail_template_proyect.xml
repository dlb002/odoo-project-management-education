<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="mail_template_project_created" model="mail.template">
            <field name="name">Proyecto creado - Notificación</field>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="subject">Nuevo proyecto creado: ${object.name}</field>
            <field name="email_from">${(user.email or '')|safe}</field>
            <field name="email_to">${object.user_id.email|safe}</field>
            <field name="body_html" type="html"><![CDATA[
                <div>
                    <p>Hola ${object.user_id.name},</p>
                    <p>Se ha creado un nuevo proyecto:</p>
                    <ul>
                        <li><strong>Nombre:</strong> ${object.name}</li>
                        <li><strong>Responsable:</strong> ${object.user_id.name}</li>
                        <li><strong>Fecha límite:</strong> ${object.date_deadline or 'Sin definir'}</li>
                    </ul>
                    <p>Revisa la plataforma Odoo para más detalles.</p>
                </div>
            ]]>
            </field>
        </record>


        <record id="mail_template_project_updated" model="mail.template">
            <field name="name">Proyecto actualizado - Notificación</field>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="subject">Actualización del proyecto: ${object.name}</field>
            <field name="email_from">${(user.email or '')|safe}</field>
            <field name="email_to">${object.user_id.email|safe}</field>
            <field name="body_html"><![CDATA[
                <div>
                  <p>Hola ${object.user_id.name},</p>
                  <p>El proyecto <strong>${object.name}</strong> ha sido modificado.</p>
                  <p>Por favor, accede a la plataforma para revisar los cambios.</p>
                </div>
            ]]>
            </field>
        </record>
    </data>
</odoo>