<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <!-- Regla para Dirección: puede ver todo -->
        <record id="project_task_rule_director" model="ir.rule">
            <field name="name">Acceso Total a Tareas - Dirección</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="groups" eval="[(4, ref('custom-ies-delgado-hernandez.group_director'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <!-- Regla para Usuario General: solo tareas asignadas -->
        <record id="project_task_rule_general_user" model="ir.rule">
            <field name="name">Ver Solo Tareas Asignadas</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="groups" eval="[(4, ref('custom-ies-delgado-hernandez.group_general_user'))]"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
        </record>

    </data>
</odoo>