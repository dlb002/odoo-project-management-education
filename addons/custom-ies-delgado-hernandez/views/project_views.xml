<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- This view inherits from the project form view -->
    <record id="view_project_form_hide_partner_id" model="ir.ui.view">
        <field name="name">project.project.form.inherit.hide.partner</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <!-- Hide the partner_id field in the project form -->
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>
</odoo>